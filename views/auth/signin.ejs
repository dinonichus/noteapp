<!-- tampilan halaman sign in -->
<div class="row justify-content-center">
	<div class="col-12 col-md-8 col-lg-6">
		<div class="text-center mb-4">
			<h2 class="display-3 fw-bold heading">Sign In</h2>
			<p class="text-muted">Welcome back! Sign in to your account to continue using Brain Canvas..</p>

			<!-- error handling -->
			<% if (error) { %>
			<p class="text-danger mt-1"><%= error %></p>
			<% } %>
		</div>

		<!-- input data user -->
		<form action="/signin" method="POST" class="bg-white py-4 px-5 rounded-4 border mb-4">
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input type="email" class="form-control bg-light" id="email" name="email" required />
			</div>

			<div class="mb-4">
				<label for="password" class="form-label">Password</label>
				<input type="password" class="form-control bg-light" id="password" name="password" required />
			</div>

			<div class="d-flex justify-content-between align-items-center">
				<button type="submit" class="btn btn-primary">Sign In</button>
				<p class="mt-3">Don't have an account? <a href="/signup">Sign Up</a></p>
			</div>
		</form>

		<div>
			<div class="d-flex align-items-center mb-3 w-50 mx-auto text-muted">
				<hr class="flex-grow-1" />
				<span class="mx-4">Or sign up with</span>
				<hr class="flex-grow-1" />
			</div>

			<!-- alternatif dengan google auth -->
			<a
				href="/google/auth"
				class="btn btn-outline-primary w-75 mx-auto d-flex justify-content-center align-items-center">
				<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 30 30" fill="currentColor">
					<path
						d="M 15.003906 3 C 8.3749062 3 3 8.373 3 15 C 3 21.627 8.3749062 27 15.003906 27 C 25.013906 27 27.269078 17.707 26.330078 13 L 25 13 L 22.732422 13 L 15 13 L 15 17 L 22.738281 17 C 21.848702 20.448251 18.725955 23 15 23 C 10.582 23 7 19.418 7 15 C 7 10.582 10.582 7 15 7 C 17.009 7 18.839141 7.74575 20.244141 8.96875 L 23.085938 6.1289062 C 20.951937 4.1849063 18.116906 3 15.003906 3 z"></path>
				</svg>
				<i class="fab fa-google me-2"></i> Sign in with Google
			</a>
		</div>
	</div>
</div>
